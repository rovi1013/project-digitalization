[Unit]
Description=CoAP Server Auto-start
After=network.target

[Service]
WorkingDirectory=/home/rpi.../project-digitalization/webserver
Environment="COAP_SERVER_IP=fe80::a41d:b3f5:5212:392f"
Environment="PYTHONUNBUFFERED=1"
Environment="VIRTUAL_ENV=/home/rpi.../project-digitalization/webserver/.venv"
ExecStart=/bin/bash -c '$VIRTUAL_ENV/bin/python /home/rpi.../project-digitalization/webserver/coap_websocket.py'
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
